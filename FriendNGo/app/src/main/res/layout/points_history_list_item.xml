<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/points_history_row_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/points_history_points"
        android:text="+75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/points_history_created_text"
        android:text="You posted an activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/points_history_clock_image"
        app:srcCompat="@drawable/clock"
        android:layout_toLeftOf="@+id/points_history_time"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="1dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/points_history_time"
        android:text="10 min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="11sp"
        android:layout_centerVertical="true"/>
</RelativeLayout>