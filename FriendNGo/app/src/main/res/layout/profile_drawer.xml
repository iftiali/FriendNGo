<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.friendngo.friendngo.friendngo.WhoAreYou">

    <TextView
        android:text="My Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/drawer_name_input_editView"
            android:background="@android:color/white"
            android:hint="User Name"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_below="@+id/drawer_profilepicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    <Spinner
        android:hint="Citizenship"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:id="@+id/drawer_citizen_spinner"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_below="@+id/drawer_name_input_editView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Age"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/drawer_age_editText"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/drawer_language_spninner"
        android:layout_alignLeft="@+id/drawer_language_spninner"
        android:layout_alignStart="@+id/drawer_language_spninner"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        android:background="@android:color/white" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:srcCompat="@drawable/crayon"
            android:layout_alignTop="@+id/drawer_age_editText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/drawer_imageView4"
        android:adjustViewBounds="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/next"
            android:layout_alignTop="@+id/drawer_citizen_spinner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/drawer_imageView6" />

        <Button
            android:text="Save"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/drawer_profile_continue_button"
            android:background="@drawable/submit_button"
            android:textColor="@android:color/white"
            android:layout_margin="15dp" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:srcCompat="@drawable/crayon"
            android:id="@+id/drawer_imageView7"
            android:layout_alignTop="@+id/drawer_name_input_editView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <io.apptik.widget.multiselectspinner.MultiSelectSpinner
            android:hint="Spoken Languages"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/drawer_language_spninner"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:layout_below="@+id/drawer_citizen_spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/drawer_imageView"
            android:src="@drawable/next"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/drawer_language_spninner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
        android:src="@drawable/empty_profile"
            android:id="@+id/drawer_profilepicture"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="2"
            app:civ_shadow_color="@color/greyish"
        android:layout_below="@+id/textView3"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>