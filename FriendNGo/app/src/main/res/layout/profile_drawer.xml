            <TextView
                android:id="@+id/other_user_name"
                android:text="Steff Zaharova"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other_user_picture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/other_user_age"
                android:text="28 y-o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="142dp"
                android:layout_marginTop="200dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/other_user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_list_point"
                android:text="10pts"
                android:padding="2dp"
                android:layout_alignBottom="@+id/other_user_age"
                android:layout_toRightOf="@id/other_user_age"
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/other_user_info"
                android:layout_toRightOf="@id/other_user_points"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/info"
                android:layout_alignBottom="@+id/other_user_age"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:id="@+id/other_user_citizenship"
                android:text="Citizenship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="238dp"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/other_user_location"
                android:text="Resident Montreal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/other_user_citizenship"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/other_user_country_flag"
                app:srcCompat="@drawable/canada"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/other_user_location"
                android:layout_toEndOf="@+id/other_user_dotText"
                android:layout_toRightOf="@+id/other_user_dotText" />


            <TextView
                android:id="@+id/other_user_dotText"
                android:text="   Â·   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="8sp"
                android:layout_toRightOf="@+id/other_user_location"
                android:layout_alignBaseline="@+id/other_user_location"
                android:layout_alignBottom="@+id/other_user_location"/>

            <TextView
                android:id="@+id/other_user_about"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque fringilla nulla non metus commodo dignissim. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur eros felis, fringilla vitae."
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="4dp"
                android:layout_marginBottom="24dp"
                android:layout_below="@+id/other_user_location"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="I already have an"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
               android:textStyle="bold"

                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/other_user_citizenship"
                android:layout_alignEnd="@+id/other_user_citizenship"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:text="account"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/other_user_info"
                android:layout_alignEnd="@+id/other_user_info"
                android:id="@+id/other_account" />


        </RelativeLayout>
