<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/cup"
        android:id="@+id/profile_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="Created by scottLaughlin, 29 y-o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture"
        android:id="@+id/created_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="8sp" />

    <TextView
        android:text="Resident, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created_text"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture"
        android:id="@+id/status_text"
        android:paddingLeft="10dp"
        android:textSize="8sp" />

    <TextView
        android:text="Montreal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created_text"
        android:layout_toRightOf="@+id/status_text"
        android:layout_toEndOf="@+id/status_text"
        android:id="@+id/home_city_text"
        android:textSize="8sp" />

    <TextView
        android:text="   Â·   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created_text"
        android:layout_toRightOf="@+id/home_city_text"
        android:layout_toEndOf="@+id/home_city_text"
        android:id="@+id/dotText"
        android:textStyle="normal|bold"
        android:textSize="8sp" />

    <ImageView
        app:srcCompat="@drawable/cup"
        android:layout_below="@+id/created_text"
        android:layout_toRightOf="@+id/dotText"
        android:id="@+id/country_flag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:paddingBottom="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@+id/profile_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/separation_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cup"
        android:id="@+id/activity_type"
        android:layout_below="@+id/separation_bar"
        android:layout_alignLeft="@+id/profile_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="OctoberFest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separation_bar"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture"
        android:id="@+id/activity_name"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clock"
        android:layout_below="@+id/activity_type"
        android:layout_alignLeft="@+id/profile_picture"
        android:id="@+id/clock_image"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/points"
        android:id="@+id/points"
        android:padding="5dp"
        android:layout_alignTop="@+id/profile_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Fri 20, 10:15pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_time"
        android:textSize="8sp"
        android:layout_alignTop="@+id/clock_image"
        android:layout_toRightOf="@+id/clock_image"
        android:layout_toEndOf="@+id/clock_image"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pin"
        android:layout_alignTop="@+id/clock_image"
        android:layout_toRightOf="@+id/activity_time"
        android:id="@+id/pin_image"
        android:layout_marginLeft="35dp" />

    <TextView
        android:text="10km away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pin_image"
        android:layout_toRightOf="@+id/pin_image"
        android:layout_toEndOf="@+id/pin_image"
        android:id="@+id/textView7"
        android:textSize="8sp"
        android:layout_marginTop="4dp" />

    <Button
        android:text="+"
        android:id="@+id/button666"
        android:layout_alignBottom="@+id/pin_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:layout_width="35dp"
        android:layout_margin="10dp"
        android:layout_height="35dp" />

</RelativeLayout>