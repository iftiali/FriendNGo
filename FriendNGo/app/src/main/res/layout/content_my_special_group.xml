<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_special_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.friendngo.friendngo.friendngo.MySpecialGroup"
    tools:showIn="@layout/activity_my_special_group">

    <TextView
        android:text="Do you have a code for a special group in the app?"
        android:layout_height="wrap_content"
        android:id="@+id/code_explanation_text_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:layout_width="225dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/code_explanation_text_view"
        android:layout_centerHorizontal="true"
        android:id="@+id/code_edit_text"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_corners_white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Type The Code Here"
        android:textAlignment="center" />

    <TextView
        android:text="No I don't"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code_edit_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/no_code_text"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorAccent" />

    <Button
        android:text="NEXT"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/code_next_button"
        android:layout_width="160dp"
        android:textColor="@android:color/white"
        android:background="@drawable/submit_button"
        android:layout_marginBottom="15dp" />

</RelativeLayout>
