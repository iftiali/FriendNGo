<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_filters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.friendngo.friendngo.friendngo.FiltersActivity"
    tools:showIn="@layout/activity_filters"
    android:background="@color/whiteish">

    <FrameLayout
        android:id="@+id/filters_days_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/filters_sunday"
                android:text="S"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_monday"
                android:text="M"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_tuesday"
                android:text="T"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_wednesday"
                android:text="W"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_thursday"
                android:text="T"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_friday"
                android:text="F"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_saturday"
                android:text="S"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/filters_days_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filters_days_week">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/filters_14"
                android:text="14"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_15"
                android:text="15"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_16"
                android:text="16"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_17"
                android:text="17"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_18"
                android:text="18"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_19"
                android:text="19"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/filters_20"
                android:text="20"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textAlignment="center" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/filters_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filters_days_number"
        android:layout_marginTop="24dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/activity_list_rounded_edges">

            <Button
                android:id="@+id/filters_save_button"
                android:text="Save filters"
                android:layout_width="160dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
               android:layout_below="@+id/filters_location_enable"
                android:layout_centerHorizontal="true"
                android:background="@drawable/submit_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/filters_categories_heading"
                android:text="Categories"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <TextView
                android:id="@+id/filters_all_heading"
                android:layout_below="@id/filters_categories_heading"
                android:text="All"
                android:textSize="14sp"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/filters_next_one"
                android:layout_width="10dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/next"
                android:layout_alignTop="@+id/filters_all_heading"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"/>


            <TextView
                android:id="@+id/filters_groups_heading"
                android:layout_below="@id/filters_all_heading"
                android:text="Groups"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <TextView
                android:id="@+id/filters_all_heading_two"
                android:layout_below="@id/filters_groups_heading"
                android:text="All"
                android:textSize="14sp"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/filters_next_two"
                android:layout_width="10dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/next"
                android:layout_alignTop="@+id/filters_all_heading_two"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/filters_distance_heading"
                android:layout_below="@id/filters_all_heading_two"
                android:text="Maximum distance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <TextView
                android:id="@+id/filters_distance_km"
                android:text="20 km"
                android:layout_alignTop="@id/filters_distance_heading"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white" />

    <SeekBar
        android:id="@+id/filters_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filters_distance_heading"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:background="@color/white"/>

            <TextView
                android:id="@+id/filters_location"
                android:text="We need to know your geolocation to suggest events around you"
                android:layout_below="@id/filters_distance"
                android:textSize="11sp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <TextView
                android:id="@+id/filters_location_enable"
                android:text="Enable location in your phone settings"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_below="@id/filters_location"
                android:textSize="11sp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
