<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_what_do_you_want_to_do_today"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.friendngo.friendngo.friendngo.WhatDoYouWantToDoToday"
    android:translationZ="9dp">

    <TextView
        android:text="you can select whole categories or activities only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/instructions"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sports"
        android:layout_below="@+id/instructions"
        android:layout_centerHorizontal="true"
        android:id="@+id/sports_image" />

    <ImageView
        app:srcCompat="@drawable/checked"
        android:layout_below="@+id/instructions"
        android:layout_toRightOf="@+id/sports_image"
        android:id="@+id/sports_image_check"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="-10sp"
        android:layout_marginTop="-5sp" />

    <TextView
        android:text="Sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sports_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/sports_text" />

    <TextView
        android:text="Nightlife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nightlife_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/nightlife_text" />

    <Button
        android:text="Jazz"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/nightlife_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/jazz_button"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/purple_button"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:text="Pubs"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/jazz_button"
        android:layout_toRightOf="@+id/jazz_button"
        android:layout_toEndOf="@+id/jazz_button"
        android:id="@+id/pubs_button"
        android:layout_marginLeft="15dp"
        android:background="@drawable/purple_button"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arts_and_culture"
        android:layout_below="@+id/jazz_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/arts_image"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="Art &amp; Culture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arts_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/arts_text" />

    <Button
        android:text="Gallery"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/arts_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/gallery_button"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/brown_button"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:text="Museum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/gallery_button"
        android:layout_toLeftOf="@+id/gallery_button"
        android:layout_toStartOf="@+id/gallery_button"
        android:id="@+id/museum_button"
        android:background="@drawable/brown_button"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:text="City Tour"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/gallery_button"
        android:layout_toEndOf="@+id/gallery_button"
        android:id="@+id/city_tour_button"
        android:background="@drawable/brown_button"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@+id/gallery_button"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:layout_alignTop="@+id/museum_button"
        android:layout_toRightOf="@+id/dancing_button_check"
        android:layout_toEndOf="@+id/dancing_button_check"
        android:id="@+id/museum_button_check"
        android:layout_marginLeft="-10sp"
        android:translationZ="9dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nightlife"
        android:id="@+id/nightlife_image"
        android:layout_below="@+id/tennis_button"
        android:layout_alignLeft="@+id/arts_image"
        android:layout_alignStart="@+id/arts_image"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:layout_toLeftOf="@+id/nightlife_image_check"
        android:layout_toStartOf="@+id/nightlife_image_check" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/jogging_button_check"
        android:translationZ="9dp"
        android:layout_below="@+id/sports_text"
        android:layout_alignLeft="@+id/tennis_button"
        android:layout_alignStart="@+id/dancing_button_check" />

    <Button
        android:text="Hockey"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/hockey_button"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/darker_gray"
        android:layout_alignBottom="@+id/tennis_button"
        android:layout_toEndOf="@+id/tennis_button"
        android:layout_alignTop="@+id/tennis_button"
        android:layout_toRightOf="@+id/tennis_button"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="15sp"
        android:layout_height="15sp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/hockey_button_check"
        android:translationZ="9dp"
        android:layout_below="@+id/sports_text"
        android:layout_toRightOf="@+id/hockey_button"
        android:layout_toEndOf="@+id/hockey_button"
        android:layout_marginLeft="-10sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/tennis_button_check"
        android:translationZ="9dp"
        android:layout_below="@+id/sports_text"
        android:layout_toRightOf="@+id/nightlife_image"
        android:layout_toEndOf="@+id/nightlife_image"
        android:layout_marginLeft="-10sp" />

    <Button
        android:text="Tennis"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tennis_button"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/sports_text"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/gallery_button_check"
        android:layout_toStartOf="@+id/gallery_button_check" />

    <Button
        android:text="Jogging"
        android:layout_width="wrap_content"
        android:id="@+id/jogging_button"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/darker_gray"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/jogging_button_check"
        android:layout_toLeftOf="@+id/arts_text"
        android:layout_toStartOf="@+id/arts_text"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/pubs_button_check"
        android:translationZ="9dp"
        android:layout_alignTop="@+id/pubs_button"
        android:layout_toRightOf="@+id/pubs_button"
        android:layout_toEndOf="@+id/pubs_button"
        android:layout_marginLeft="-10sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/city_tour_button_check"
        android:translationZ="9dp"
        android:layout_alignTop="@+id/city_tour_button"
        android:layout_toRightOf="@+id/city_tour_button"
        android:layout_toEndOf="@+id/city_tour_button"
        android:layout_marginLeft="-10sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/gallery_button_check"
        android:translationZ="9dp"
        android:layout_alignTop="@+id/gallery_button"
        android:layout_toRightOf="@+id/sports_image_check"
        android:layout_marginLeft="-10sp" />

    <ImageView
        android:layout_width="15sp"
        android:layout_height="15sp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/dancing_button_check"
        android:translationZ="9dp"
        android:layout_alignTop="@+id/jazz_button"
        android:layout_toRightOf="@+id/dancing_button"
        android:layout_toEndOf="@+id/dancing_button"
        android:layout_marginLeft="-10sp" />

    <Button
        android:text="Dancing"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/dancing_button"
        android:background="@drawable/purple_button"
        android:textColor="@android:color/darker_gray"
        android:layout_alignTop="@+id/dancing_button_check"
        android:layout_toLeftOf="@+id/jazz_button"
        android:layout_toStartOf="@+id/jazz_button" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:id="@+id/jazz_button_check"
        android:translationZ="9dp"
        android:layout_alignTop="@+id/pubs_button"
        android:layout_toRightOf="@+id/jazz_button"
        android:layout_toEndOf="@+id/jazz_button"
        android:layout_marginLeft="-10sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:layout_alignTop="@+id/nightlife_image"
        android:layout_toRightOf="@+id/arts_text"
        android:layout_toEndOf="@+id/arts_text"
        android:id="@+id/nightlife_image_check"
        android:layout_marginLeft="-10sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/checked"
        android:layout_alignTop="@+id/arts_image"
        android:layout_alignLeft="@+id/gallery_button_check"
        android:layout_alignStart="@+id/gallery_button_check"
        android:layout_marginTop="14dp"
        android:id="@+id/arts_image_check"
        android:layout_marginLeft="-10sp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/gallery_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />
</RelativeLayout>
</ScrollView>