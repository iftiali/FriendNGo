<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/whiteish"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.friendngo.friendngo.friendngo.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/settings_frame_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <RelativeLayout
                    android:id="@+id/settings_row_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:background="@color/white">


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/messages_profile_picture"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/empty_profile"
                        app:civ_border_color="#EEEEEE"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0.5"
                        app:civ_shadow_color="@color/greyish"
                        android:layout_margin="12dp"/>

                    <TextView
                        android:id="@+id/paid_event_created_text"
                        android:text="Stephania Zaharova"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/messages_profile_picture"
                        android:layout_toEndOf="@+id/messages_profile_picture"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/settings_created_text_two"
                        android:text="See profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/messages_profile_picture"
                        android:layout_toEndOf="@+id/messages_profile_picture"
                        android:layout_below="@id/paid_event_created_text"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/settings_next_one"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"/>
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_one">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_two"
                        android:text="125 Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>


                    <ImageView
                        android:id="@+id/settings_next_two"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_two">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_three"
                        android:text="City and status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/settings_next_three"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_three">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_four"
                        android:text="Special groups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/settings_next_four"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_four">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_five"
                        android:text="Notifications settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/settings_next_five"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_five">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_six"
                        android:text="Share the app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/settings_next_six"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_six">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_seven"
                        android:text="Rate the app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/settings_next_seven"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_seven">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_eight"
                        android:text="About us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/settings_next_eight"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_frame_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/settings_frame_eight">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/settings_created_text_nine"
                        android:text="Contact us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/settings_next_nine"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
