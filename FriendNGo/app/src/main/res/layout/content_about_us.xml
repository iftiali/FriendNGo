<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.friendngo.friendngo.friendngo.AboutUsActivity"
    tools:showIn="@layout/activity_about_us">

    <TextView
        android:id="@+id/about_us_text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In at consequat nisl. Vivamus enim nisl, accumsan sagittis tortor at, consequat scelerisque leo. Pellentesque porta, nulla sed tincidunt interdum, erat urna vehicula turpis, ac tempor augue ligula tempus leo. "
        android:padding="12dp"
        android:layout_marginTop="6dp"
        android:textSize="11sp"/>


    <TextView
        android:id="@+id/about_us_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_us_text_one"
        android:layout_centerHorizontal="true"
        tools:text="Aliquam lobortis eros non mauris posuere, in accumsan erat eleifend. Quisque vehicula sapien at augue euismod gravida. Aenean sed urna ac turpis luctus efficitur vel vitae sapien. Nullam scelerisque vulputate accumsan. Pellentesque ornare semper mi, at molestie justo lacinia elementum. Fusce pulvinar, libero vestibulum viverra pharetra, leo lorem dictum neque, at semper urna ligula nec quam."
        android:padding="12dp"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/about_us_text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_us_text_two"
        android:layout_centerHorizontal="true"
        tools:text="Donec molestie mi non feugiat efficitur. Fusce at volutpat justo. Nunc vestibulum risus eros, at varius diam mollis ut. Donec pharetra felis orci, id tempus est varius at. Donec eget malesuada dui. Sed et felis quis nulla pulvinar pharetra id eget lectus. Suspendisse ac erat est."
        android:padding="12dp"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/about_us_privacy_policy_text"
        android:text="Privacy Policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/about_us_terms_and_conditions_text"
        android:text="Terms and Conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_us_privacy_policy_text"
        android:layout_alignLeft="@+id/about_us_privacy_policy_text"
        android:layout_alignStart="@+id/about_us_privacy_policy_text"
        android:background="@android:color/white"
        android:padding="15dp"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/term_and_conditions_next"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/next"
        android:layout_alignTop="@+id/about_us_terms_and_conditions_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/about_us_privacy_policy_next"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/next"
        android:layout_alignTop="@+id/about_us_privacy_policy_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
