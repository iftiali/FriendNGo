<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_who_are_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewWhoAreYouActivity"
    tools:showIn="@layout/activity_new_who_are_you">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="15dp"
        android:src="@drawable/empty_profile"
        android:id="@+id/profilepicture"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="2"
        app:civ_shadow_color="@color/greyish"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginLeft="15dp"
        android:background="@color/white"
        android:layout_marginTop="11dp"
        android:id="@+id/name_edit_view"
        android:hint="User Name"
        android:layout_below="@+id/profilepicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:hint="Citizenship"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:id="@+id/citizen_spinner"
        android:layout_below="@+id/name_edit_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:srcCompat="@drawable/next"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/citizen_spinner"
        android:id="@+id/imageView2"
        android:layout_alignRight="@+id/citizen_spinner"
        android:layout_alignEnd="@+id/citizen_spinner" />

    <io.apptik.widget.multiselectspinner.MultiSelectSpinner
        android:hint="Spoken Languages"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/language_spinner"
        android:background="@color/white"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/citizen_spinner" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/next"
        android:layout_alignBottom="@+id/language_spinner"
        android:layout_alignRight="@+id/citizen_spinner"
        android:layout_alignEnd="@+id/citizen_spinner"
        android:id="@+id/imageView4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Age"
        android:inputType="number"
        android:ems="10"
        android:layout_marginLeft="15dp"
        android:background="@color/white"
        android:layout_marginTop="3dp"
        android:id="@+id/age_edit_view"
        android:layout_below="@+id/language_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/crayon"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/age_edit_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/age_edit_view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:srcCompat="@drawable/crayon"
        android:id="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/citizen_spinner"
        android:layout_alignTop="@+id/name_edit_view" />

    <Button
        android:text="Next"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_continue_button"
        android:background="@drawable/submit_button"
        android:textColor="@android:color/white"
        android:layout_margin="15dp" />
</RelativeLayout>
