<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_who_are_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewWhoAreYouActivity"
    tools:showIn="@layout/activity_new_who_are_you">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/profile_continue_button">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/empty_profile"
        android:id="@+id/profilepicture"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/profilepicture">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Name"

                android:ems="10"
                android:paddingLeft="15dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:id="@+id/name_edit_view"
                android:layout_alignParentTop="true"
                />
            <ImageView
                android:id="@+id/name_crayon"
                app:srcCompat="@drawable/crayon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_alignBottom="@id/name_edit_view"
                android:layout_alignTop="@id/name_edit_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

            <AutoCompleteTextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:hint="Citizenship"
                android:layout_below="@+id/name_edit_view"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:id="@+id/citizen_spinner"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <MultiAutoCompleteTextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Spoken languages"
                android:paddingLeft="15dp"
                android:id="@+id/language_spinner"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/citizen_spinner"
                />
            <ImageView
                android:id="@+id/citizen_next_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/crayon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/citizen_spinner"
                android:layout_alignBottom="@+id/citizen_spinner"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/languages_next_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/crayon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/language_spinner"
                android:layout_alignBottom="@+id/language_spinner"
                android:background="@android:color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Age"
                android:inputType="number"
                android:ems="10"
                android:paddingLeft="15dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:id="@+id/age_edit_view"
                android:layout_below="@+id/language_spinner"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/crayon"
                android:id="@+id/age_crayon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/age_edit_view"
                android:layout_alignBottom="@+id/age_edit_view"
                android:background="@android:color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="Bio"
                android:lines="3"
                android:paddingLeft="15dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:id="@+id/bio_edit_view"
                android:layout_below="@+id/age_edit_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/languages_next_image"
                android:maxLines="10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/crayon"
                android:id="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/bio_edit_view"
                android:layout_alignTop="@+id/bio_edit_view"
                android:background="@android:color/white" />


                <EditText
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:hint="+1"
                android:ems="10"
                android:paddingLeft="15dp"
                android:maxLength="4"
                android:inputType="number"
                android:layout_below="@+id/bio_edit_view"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:id="@+id/code_phone_edit_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Phone"
                    android:maxLength="10"
                    android:ems="10"
                    android:paddingLeft="15dp"
                    android:inputType="number"
                    android:layout_marginLeft="55dp"
                    android:layout_below="@+id/bio_edit_view"
                    android:background="@color/white"
                    android:layout_marginTop="3dp"
                    android:id="@+id/phone_edit_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
        </RelativeLayout>

      </RelativeLayout>
    </ScrollView>
    <Button
        android:text="Next"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_continue_button"
        android:background="@drawable/submit_button"
        android:textColor="@android:color/white"
        android:layout_margin="15dp" />
</RelativeLayout>

